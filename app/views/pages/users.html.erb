
<div class="profile row">
    <div class="col-md-4 avatar">
        <!-- LEFT: AVATAR HERE -->
    </div>

    <div class="col-md-8 basic-info">
        <!-- RIGHT: USER INFORMATION HERE -->
    </div>
</div>

<div class="user-profile">
  <div class="profile row">
    <div class="col-md-4 avatar">
      <div class="wrapper">
        <img src="https://instuigram-avatar.jpg">
      </div>
    </div>
    
    <div class="col-md-8 basic-info">
      <div class="user-wrapper">
        <h2 class="username"> <%= current_user.username %></h2>
        <a class="edit-profile" href="<%= edit_user_path(current_user) %>">
          <button>Edit Profile</button>
        </a>

      </div>
      <ul class="posts">
        <li><span> <% @posts.count %></span> </li>
        <li><span>420</span> followers</li>
        <li><span>920</span> following</li>
      </ul>
      <h2 class="name"><%= current_user.name %></h2>
        <%=link_to current_user.website, current_user.website, class: 'website' %>
    </div>
  </div>
</div>

<!-- User Profile Tabs -->
<div class="user-tabs">
  <a class="tab active" href="">
    <i class="fa fa-th"></i>
    POSTS
  </a>
  <a class="tab" href="">
    <i class="fa fa-tv"></i>
    VIDEOS
  </a>
  <a class="tab" href="">
    <i class="fa fa-bookmark"></i>
    SAVED
  </a>
  <a class="tab" href="">
    <i class="fa fa-tag"></i>
    TAGGED
  </a>
</div>

<!-- Show Images On User Profile -->
<div class="user-images">
  <div class="wrapper">
    <img src="https://www.rd.com/wp-content/uploads/2021/04/GettyImages-863009268-scaled.jpg?resize=696,391">
  </div>
  <div class="wrapper">
    <img src="https://images.unsplash.com/photo-1507525428034-b723cf961d3e?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1473&q=80">
  </div>
  <div class="wrapper">
    <%= image_tag 'sloths.jpeg', class: 'w-50 rounded-circle shadow-lg d-block mx-auto', style: 'max-width: 20rem;' %>
  </div>
</div>

<div class="posts">
  <% @posts.each do |post| %>
    <section class="post">
      <!-- post view -->
    </section>
  <% end %>
</div>

<section class="post">
  <div class="user">
    <div class="avatar">
      <img src="user_avatar.jpg">
    </div>
    <div class="username">
      <%= post.user.username %>
    </div>
  </div>
  <%= image_tag post.image, class: 'main-image' %>
  <div class="description">
    <%= post.description %>
  </div>
</section>



